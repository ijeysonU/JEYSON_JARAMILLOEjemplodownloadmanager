<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="120dp"
                android:layout_height="105dp"
                android:layout_below="@+id/txtArchivo"
                android:layout_marginTop="2dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/txtArchivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Archivo"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#673AB7"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblFormato"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/txtArchivo"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="1dp"
                android:text="Formato:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtformato"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/txtArchivo"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="218dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/lblFormato"
                android:text="0000000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txttamanio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txtformato"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="20dp"
                android:text="correo@gmmail.com"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/lbltamanio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtArchivo"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="21dp"
                android:text="TamaÃ±o:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEvaluar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbltamanio"
                android:layout_marginTop="67dp"
                android:text="Descargar"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>